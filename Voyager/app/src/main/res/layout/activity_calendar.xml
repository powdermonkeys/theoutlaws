<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CalendarActivity"
    android:id="@+id/rlCalendar">

    <RelativeLayout
        android:id="@+id/dateHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/iconBackgroundBlue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previous_day"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:padding="5dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/display_current_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="July 27, 2018"
            android:layout_toRightOf="@id/previous_day"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="110dp"
            android:paddingRight="110dp"
            android:textColor="#fafafa"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_day"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="5dp"
            android:paddingLeft="110dp"
            android:src="@drawable/right_arrow" />

        <TextView
            android:id="@+id/tvWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_current_date"
            android:paddingLeft="60dp"
            android:textSize="14sp"
            android:textColor="@color/whitish"
            android:text="TextView" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dateHeader"
        android:id="@+id/svCalendar">

        <com.framgia.library.calendardayview.CalendarDayView
            android:id="@+id/dayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            app:dayHeight="@dimen/dayHeight"
            app:eventMarginLeft="10dp">
        </com.framgia.library.calendardayview.CalendarDayView>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:background="@color/whitish">

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rvHorizontal">
        </android.support.v7.widget.RecyclerView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addIcon"
            app:backgroundTint="@color/iconBackgroundBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@drawable/add_white"
            app:layout_anchorGravity="bottom|right|end" />
    </FrameLayout>

</RelativeLayout>