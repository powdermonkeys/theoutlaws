<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddingEventFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAttractionName"
            android:layout_marginTop="30dp"
            android:text="Start Time: " />

        <EditText
            android:id="@+id/etStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAttractionName"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tvStartTime"/>

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStartTime"
            android:text="End Time: "
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/etEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:layout_toRightOf="@id/tvEndTime"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaveDialog"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/ic_clear_black"/>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="add"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpImageSlideshow"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ciImageSwiper"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignStart="@id/vpImageSlideshow"
            android:layout_below="@id/vpImageSlideshow"
            app:ci_drawable="@drawable/circleindicator_round" />

    </RelativeLayout>
</FrameLayout>