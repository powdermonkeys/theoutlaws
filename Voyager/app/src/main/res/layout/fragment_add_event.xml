<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddingEventFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/attractionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:text="attraction name placeholder"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leaveDialog"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:src="@drawable/ic_clear_black"/>

        <TextView
            android:id="@+id/tvTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Pick a time to add event to your calendar"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_below="@id/attractionName"
            android:textSize="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tvTimePicker">

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTimePicker"
                android:paddingLeft="20dp"
                android:text=" From: "  />

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTimePicker"
                android:layout_toRightOf="@id/tvStartTime"
                android:layout_alignBottom="@id/tvStartTime"/>

            <TextView
                android:id="@+id/tvUntil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/etStartTime"
                android:layout_toLeftOf="@id/etStartTime"
                android:layout_alignTop="@id/etStartTime"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text=" to " />


            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvUntil" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/vpImageSlideshow"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ciImageSwiper"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignStart="@id/vpImageSlideshow"
            android:layout_below="@id/vpImageSlideshow"
            app:ci_drawable="@drawable/circleindicator_round" />

        <Button
            android:id="@+id/add"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/vpImageSlideshow"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="Add Attraction"
            android:background="@drawable/rounded_button"/>



    </RelativeLayout>
</FrameLayout>