<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddingAttractionFragment"
    android:background="@color/iconBackgroundBlue">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ProgressBar
            android:id="@+id/pbBudget"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:indeterminate="false"
            android:max="100"
            android:progressTint="@color/moneyGreen"
            android:scaleY="7"
            style="?android:attr/progressBarStyleHorizontal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAttractions"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pbBudget"
            android:layout_margin="2dp"
            android:layout_above="@id/done"/>
        <Button
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/done"
            android:text="VIEW CALENDAR"
            android:background="@color/whitish"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</FrameLayout>