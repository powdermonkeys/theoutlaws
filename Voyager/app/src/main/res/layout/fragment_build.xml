<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/create"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/destinationNamed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create"
        android:padding="5dp"
        android:hint="@string/destination" />

    <Button
        android:id="@+id/btnArrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destinationNamed"
        android:layout_marginTop="110dp"
        android:hint="@string/arrival" />

    <EditText
        android:id="@+id/arrivalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnArrival"
        android:layout_alignStart="@+id/departureDate"
        android:background="@color/colorAccent"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnDeparture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"

        android:hint="@string/departure" />

    <EditText
        android:id="@+id/departureDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnDeparture"
        android:layout_alignParentStart="true"
        android:layout_marginStart="163dp"
        android:background="@color/colorAccent"
        android:padding="5dp" />

</RelativeLayout>